{
  "name": "@openzeppelin/compact-tools",
  "description": "Tools for compiling, building and testing Compact smart contracts",
  "private": true,
  "packageManager": "yarn@4.10.3",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --log-prefix=none",
    "test": "turbo run test --log-prefix=none",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "lint:ci": "biome ci . --no-errors-on-unmatched",
    "types": "turbo run types",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@midnight-ntwrk/ledger-v7": "^7.0.0",
    "@midnight-ntwrk/zswap": "^4.0.0",
    "@types/node": "24.10.1",
    "ts-node": "^10.9.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
